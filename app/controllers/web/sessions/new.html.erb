<div class="ui middle aligned center aligned grid" style="height: 80vh;">
  <div class="column" style="max-width: 450px;">
    <h2 class="ui teal image header">
      <img src="/logo.svg" class="image" alt="MailerAction logo">
      <div class="content">Iniciar sesión en tu cuenta</div>
    </h2>
    <form class="ui large form" action="/login" method="post">
      <div class="ui stacked segment">
        <div class="field">
          <label>Email</label>
          <input type="email" name="email" placeholder="ejemplo@mail.com" required>
        </div>
        <div class="field">
          <label>Contraseña</label>
          <input type="password" name="password" placeholder="••••••••" required>
        </div>
        <button type="submit" class="ui fluid large teal button">Iniciar Sesión</button>
      </div>

      <div class="ui error message"></div>
    </form>

    <div class="ui message">
      ¿No tenés cuenta? <a href="/signup">Registrate</a>
    </div>
  </div>
</div>
