<!-- app/views/web/registrations/new.html.erb -->
<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 100vh; background-image: url('https://path_to_your_image.jpg'); background-size: cover;">
  <div class="row w-100 justify-content-center">
    <div class="col-lg-4 col-md-6 col-12 bg-white rounded shadow-lg p-4">
      
      <h2 class="text-center mb-4 hero-title">Crea tu cuenta en MailerAction</h2>

      <%= form_with(model: @user, url: "/web/signup", method: :post, local: true, html: { class: "needs-validation", novalidate: true }) do |form| %>
        
        <!-- Mensajes flash -->
        <% if flash[:alert] %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= flash[:alert] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>

        <% if flash[:notice] %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= flash[:notice] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>

        <!-- Correo electrónico -->
        <div class="mb-3">
          <%= form.label :email_address, "Correo electrónico", class: "form-label" %>
          <%= form.text_field :email_address, required: true, class: "form-control", placeholder: "Ingresa tu correo electrónico" %>
        </div>

        <!-- Contraseña -->
        <div class="mb-3">
          <%= form.label :password, "Contraseña", class: "form-label" %>
          <%= form.password_field :password, required: true, class: "form-control", placeholder: "Ingresa tu contraseña" %>
        </div>

        <!-- Confirmar Contraseña -->
        <div class="mb-3">
          <%= form.label :password_confirmation, "Confirmar Contraseña", class: "form-label" %>
          <%= form.password_field :password_confirmation, required: true, class: "form-control", placeholder: "Confirma tu contraseña" %>
        </div>

        <!-- Botón de registro -->
        <div class="d-grid">
          <%= form.submit "Crear cuenta", class: "btn btn-primary" %>
        </div>
      <% end %>

      <!-- Enlace para iniciar sesión si ya tienes cuenta -->
      <div class="d-flex justify-content-center mt-3">
        <%= link_to "¿Ya tienes una cuenta? Inicia sesión", "/web/login", class: "text-decoration-none" %>
      </div>

    </div>
  </div>
</div>
