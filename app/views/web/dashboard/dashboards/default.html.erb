<h1>Dashboard General</h1>
<p>Hola <%= current_user.email_address %>. Este es el panel por defecto.</p>

<%= turbo_frame_tag "dashboard_section" do %>
  <% if params[:section] == "campaign_create" && params[:editor] == "visual" %>
    <% if @campaign %>
      <turbo-stream-from channel="campaign_<%= @campaign.id %>" />
    <% end %>
    <%= render "web/dashboard/campaigns/shared/canvas_create_campaign" %>
  <% else %>
    <% case params[:section] %>
    <% when "campaign_create" %>
      <%= render "layouts/shared/campaigns/create" %>
    <% when "campaign_schedule" %>
      <%= render "layouts/shared/campaigns/schedule" %>
    <% when "campaign_scheduled" %>
      <%= render "layouts/shared/campaigns/scheduled" %>
    <% when "campaign_sent" %>
      <%= render "layouts/shared/campaigns/sent" %>
    <% when "campaign_statistics" %>
      <%= render "layouts/shared/campaigns/statistics" %>
    <% when "campaign_flow_automation" %>
      <%= render "layouts/shared/campaigns/flow_automation" %>
    <% when "campaign_recommendations_ai" %>
      <%= render "layouts/shared/campaigns/recommendations_ai" %>
    <% when "campaign_interactive_map" %>
      <%= render "layouts/shared/campaigns/interactive_map" %>
    <% else %>
      <%= render "layouts/shared/campaigns/welcome" %>
    <% end %>
  <% end %>
<% end %>

