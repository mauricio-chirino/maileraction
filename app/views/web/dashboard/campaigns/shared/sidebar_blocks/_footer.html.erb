<% [
  {type: "footer-basic", label: t("sidebar.create_campaign.blocks.footer.basic"), desc: t("sidebar.create_campaign.blocks.footer.basic_desc")},
  {type: "footer-social", label: t("sidebar.create_campaign.blocks.footer.social"), desc: t("sidebar.create_campaign.blocks.footer.social_desc")},
  {type: "footer-links", label: t("sidebar.create_campaign.blocks.footer.links"), desc: t("sidebar.create_campaign.blocks.footer.links_desc")},
  {type: "footer-legal", label: t("sidebar.create_campaign.blocks.footer.legal"), desc: t("sidebar.create_campaign.blocks.footer.legal_desc")},
  {type: "footer-subscribe", label: t("sidebar.create_campaign.blocks.footer.subscribe"), desc: t("sidebar.create_campaign.blocks.footer.subscribe_desc")}
].each do |block| %>
  <div class="sidebar-block draggable-block px-2 py-2 mb-1 rounded bg-white d-flex align-items-start gap-2"
       draggable="true"
       data-block-type="<%= block[:type] %>"
       data-category="footer"
       data-action="dragstart->sidebar#createBlockPreview">
    <div>
      <strong><%= block[:label] %></strong>
      <small class="text-muted d-block"><%= block[:desc] %></small>
    </div>
  </div>
<% end %>
