<% [
  {type: "section-basic", label: t("sidebar.create_campaign.blocks.section.basic"), desc: t("sidebar.create_campaign.blocks.section.basic_desc")},
  {type: "section-two-col", label: t("sidebar.create_campaign.blocks.section.two_col"), desc: t("sidebar.create_campaign.blocks.section.two_col_desc")},
  {type: "section-three-col", label: t("sidebar.create_campaign.blocks.section.three_col"), desc: t("sidebar.create_campaign.blocks.section.three_col_desc")},
  {type: "section-feature", label: t("sidebar.create_campaign.blocks.section.feature"), desc: t("sidebar.create_campaign.blocks.section.feature_desc")},
  {type: "section-cta", label: t("sidebar.create_campaign.blocks.section.cta"), desc: t("sidebar.create_campaign.blocks.section.cta_desc")}
].each do |block| %>
  <div class="sidebar-block draggable-block px-2 py-2 mb-1 rounded bg-white d-flex align-items-start gap-2"
       draggable="true"
       data-block-type="<%= block[:type] %>"
       data-category="sections"
       data-action="dragstart->sidebar#createBlockPreview">
    <div>
      <strong><%= block[:label] %></strong>
      <small class="text-muted d-block"><%= block[:desc] %></small>
    </div>
  </div>
<% end %>
