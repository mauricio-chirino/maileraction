<!-- app/views/web/dashboard/campaigns/shared/sidebar_blocks/hero/_image.html.erb -->
<div class="email-block"
     data-controller="block"
     data-block-type="hero-image"
     data-block-id="block-<%= SecureRandom.uuid %>"
     data-category="hero">
  <%= render "web/dashboard/campaigns/shared/block_toolbar" %>
  
  <div class="email-hero-image-block text-center px-4 py-5">
    <img src="https://placehold.co/480x220?text=Main+Image"
         alt="<%= t('sidebar.create_campaign.blocks.hero.image') %>"
         class="mb-4 rounded shadow mx-auto d-block"
         style="max-width: 460px; width: 100%; height: auto;">
    <h2 class="fw-bold mb-2" style="font-size: 1.65rem;">
      <%= t("sidebar.create_campaign.blocks.hero.image") %>
    </h2>
    <p class="text-muted mb-3">
      <%= t("sidebar.create_campaign.blocks.hero.image_desc") %>
    </p>
    <a href="#" class="btn btn-primary px-4">
      <%= t("sidebar.create_campaign.blocks.content.button") %>
    </a>
  </div>
</div>