    <input type="text" class="form-control form-control-sm" value="About" oninput="window.updateNavMenuItem(this, 0)" />
  </div>
  <div class="mb-3">
    <label class="form-label">Menu Item 2</label>
    <input type="text" class="form-control form-control-sm" value="Work" oninput="window.updateNavMenuItem(this, 1)" />
  </div>
  <div class="mb-3">
    <label class="form-label">Menu Item 3</label>
    <input type="text" class="form-control form-control-sm" value="Blog" oninput="window.updateNavMenuItem(this, 2)" />
