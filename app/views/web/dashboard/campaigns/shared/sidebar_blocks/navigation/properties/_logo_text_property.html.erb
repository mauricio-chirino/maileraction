<!-- Propiedades para logo_text -->
<div>
  <h6 class="fw-bold mb-2">Logo + Text Properties</h6>
  <div class="mb-3">
    <label class="form-label">Logo URL</label>
    <input type="text" class="form-control form-control-sm" value="https://placehold.co/32x32?text=Logo" oninput="window.updateLogoUrl(this)" />
  </div>
  <div class="mb-3">
    <label class="form-label">Company Name</label>
    <input type="text" class="form-control form-control-sm" value="Company" oninput="window.updateLogoName(this)" />
  </div>
  <div class="mb-3">
    <label class="form-label">Slogan</label>
    <input type="text" class="form-control form-control-sm" value="We help you grow" oninput="window.updateLogoSlogan(this)" />
  </div>
</div>
