<!-- Propiedades para logo_button -->
<div>
  <h6 class="fw-bold mb-2">Logo + Button Properties</h6>
  <div class="mb-3">
    <label class="form-label">Logo URL</label>
    <input type="text" class="form-control form-control-sm" value="https://placehold.co/32x32?text=Logo" oninput="window.updateLogoUrl(this)" />
  </div>
  <div class="mb-3">
    <label class="form-label">Company Name</label>
    <input type="text" class="form-control form-control-sm" value="Company" oninput="window.updateLogoName(this)" />
  </div>
  <div class="mb-3">
    <label class="form-label">Button Text</label>
    <input type="text" class="form-control form-control-sm" value="Button" oninput="window.updateLogoButtonText(this)" />
  </div>
  <div class="mb-3">
    <label class="form-label">Button URL</label>
    <input type="text" class="form-control form-control-sm" value="#" oninput="window.updateLogoButtonUrl(this)" />
  </div>
</div>
