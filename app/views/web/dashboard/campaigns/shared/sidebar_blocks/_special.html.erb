<% [
  {type: "special-offer", label: t("sidebar.create_campaign.blocks.special.offer"), desc: t("sidebar.create_campaign.blocks.special.offer_desc")},
  {type: "special-promo", label: t("sidebar.create_campaign.blocks.special.promo"), desc: t("sidebar.create_campaign.blocks.special.promo_desc")},
  {type: "special-coupon", label: t("sidebar.create_campaign.blocks.special.coupon"), desc: t("sidebar.create_campaign.blocks.special.coupon_desc")},
  {type: "special-event", label: t("sidebar.create_campaign.blocks.special.event"), desc: t("sidebar.create_campaign.blocks.special.event_desc")},
  {type: "special-featured", label: t("sidebar.create_campaign.blocks.special.featured"), desc: t("sidebar.create_campaign.blocks.special.featured_desc")}
].each do |block| %>
  <div class="sidebar-block draggable-block px-2 py-2 mb-1 rounded bg-white d-flex align-items-start gap-2"
       draggable="true"
       data-block-type="<%= block[:type] %>"
       data-category="special"
       data-action="dragstart->sidebar#createBlockPreview">
    <div>
      <strong><%= block[:label] %></strong>
      <small class="text-muted d-block"><%= block[:desc] %></small>
    </div>
  </div>
<% end %>
