<!-- app/views/web/dashboard/campaigns/shared/_canvas_create_campaign.html.erb -->
<div class="row row-canvas">
  <!-- Sidebar izquierdo -->


  <!-- Lienzo editable central -->
  <div class="col-md-8">
    <i class="fas fa-check-circle fa-2x text-success"></i>
    <!-- Contenedor canvas principal, con Stimulus controller 'canvas' y target 'area' -->
    <div id="email-canvas"
         class="p-4 bg-white border rounded h-full overflow-auto canvas-area"
         data-controller="canvas drag drop"
         data-canvas-target="area">
      
      <!-- Bloque vacío inicial o mensaje -->
      <div class="email-block text-center text-muted" data-block-type="info" data-drag-target>
        <p class="mb-0">Drag elements from the sidebar to build your email</p>
        <small>You can reposition or remove blocks once placed</small>
      </div>

      <!-- Aquí se renderizan los bloques (en edición/carga) -->
      <div id="canvas-area-blocks" data-controller="canvas" data-canvas-target="area">
        <%= render "web/dashboard/campaigns/shared/default_email_template" %>
      </div>
    </div>
  </div>
</div>
