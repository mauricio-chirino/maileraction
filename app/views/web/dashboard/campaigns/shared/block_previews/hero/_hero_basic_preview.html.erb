<!-- Miniatura visual Hero Básico estilo MailerAction -->
<div style="
  width: 170px;
  height: 100px;
  border-radius: 0.75rem;
  background: linear-gradient(120deg, #f3f4f6 60%, #e7e8eb 100%);
  border: 1.5px solid #e0e0e0;
  box-shadow: 0 2px 10px rgba(0,0,0,.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 14px 10px 10px 10px;
  position: relative;
">
  <!-- Navigation simulada -->
  <div style="display: flex; gap: 8px; width: 100%; justify-content: flex-start; margin-bottom: 8px;">
    <div style="width: 36px; height: 7px; border-radius: 4px; background: #8e2de2;"></div>
    <div style="width: 24px; height: 7px; border-radius: 4px; background: #4a00e0; opacity: .65;"></div>
    <div style="width: 18px; height: 7px; border-radius: 4px; background: #e0e0e0;"></div>
  </div>
  <!-- Imagen central de hero -->
  <div style="width: 44px; height: 44px; border-radius: 8px; background: linear-gradient(135deg, #8e2de2 40%, #4a00e0 100%); display: flex; align-items: center; justify-content: center; box-shadow:0 2px 6px rgba(142,45,226,0.07); margin-bottom: 6px;">
    <svg width="26" height="26" viewBox="0 0 20 20">
      <rect x="1" y="6" width="18" height="8" rx="4" fill="#fff"/>
      <rect x="6" y="2.5" width="8" height="3" rx="1.2" fill="#fff" fill-opacity="0.85"/>
    </svg>
  </div>
  <!-- Título -->
  <div style="width: 62%; height: 10px; background: #4f46e5; border-radius: 5px; margin-bottom: 4px; opacity: .78;"></div>
  <!-- Subtítulo -->
  <div style="width: 80%; height: 7px; background: #e0e0e0; border-radius: 4px; margin-bottom: 5px;"></div>
  <!-- Botón simulación -->
  <div style="width: 38%; height: 14px; background: linear-gradient(90deg, #8e2de2, #4a00e0); border-radius: 7px; margin: 0 auto;"></div>
</div>
