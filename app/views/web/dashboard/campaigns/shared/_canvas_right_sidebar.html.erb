<aside id="right-sidebar" class="sidebar-end bg-light border-start p-4" data-controller="inspector">
  <h6 class="fw-semibold mb-3">Block Settings</h6>

  <!-- Placeholder when no block is selected -->
  <div data-inspector-target="placeholder">
    <p class="text-muted">Select a block to see its settings.</p>
  </div>

  <!-- Example settings for a Heading block -->
  <div data-inspector-target="headingSettings" class="d-none">
    <div class="mb-3">
      <label class="form-label">Text</label>
      <input type="text" class="form-control form-control-sm" placeholder="Enter heading text" />
    </div>

    <div class="mb-3">
      <label class="form-label">Font Size</label>
      <select class="form-select form-select-sm">
        <option>Small</option>
        <option selected>Medium</option>
        <option>Large</option>
      </select>
    </div>

    <div class="mb-3">
      <label class="form-label">Alignment</label>
      <div class="btn-group w-100" role="group">
        <button class="btn btn-outline-secondary btn-sm w-100">Left</button>
        <button class="btn btn-outline-secondary btn-sm w-100">Center</button>
        <button class="btn btn-outline-secondary btn-sm w-100">Right</button>
      </div>
    </div>
  </div>

  <!-- Example settings for a Button block -->
  <div data-inspector-target="buttonSettings" class="d-none">
    <div class="mb-3">
      <label class="form-label">Button Text</label>
      <input type="text" class="form-control form-control-sm" placeholder="Enter button text" />
    </div>

    <div class="mb-3">
      <label class="form-label">Button Color</label>
      <input type="color" class="form-control form-control-color" value="#0d6efd" />
    </div>

    <div class="mb-3">
      <label class="form-label">Link</label>
      <input type="url" class="form-control form-control-sm" placeholder="https://" />
    </div>
  </div>
</aside>
