            <!-- Navigation SVG -->
            <svg width="20" height="20" viewBox="0 0 20 20" fill="#696cff">
              <rect width="20" height="6" rx="2"></rect>
              <rect y="9" width="20" height="11" rx="2" fill-opacity=".2"></rect>
            </svg>
          </span>
          <span><%= t("sidebar.create_campaign.navigation") %></span>
        </button>
      </h2>
      <div id="collapseNavigation" class="accordion-collapse collapse" aria-labelledby="headingNavigation" data-bs-parent="#sidebarAccordion">
        <div class="accordion-body py-2 px-3">
          <%= render partial: "web/dashboard/campaigns/shared/sidebar_blocks/navigation" %>
        </div>
      </div>
    </div>

    <!-- Hero -->
