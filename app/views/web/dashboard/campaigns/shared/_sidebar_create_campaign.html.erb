      <div id="collapseHero" class="accordion-collapse collapse" aria-labelledby="headingHero" data-bs-parent="#sidebarAccordion">
        <div class="accordion-body py-2 px-3">
          <%= render partial: "web/dashboard/campaigns/shared/sidebar_blocks/hero" %>
        </div>
      </div>
    </div>

