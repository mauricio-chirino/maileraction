<!-- app/views/web/sessions/new.html.erb -->

<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 100vh; background-image: url('https://path_to_your_image.jpg'); background-size: cover;">
  <div class="row w-100 justify-content-center">
    <div class="col-lg-4 col-md-6 col-12 bg-white rounded shadow-lg p-4">
      
      <!-- Título con la clase hero-title -->
      <h2 class="text-center mb-4 hero-title">Inicia sesión en tu cuenta MailerAction</h2>

      <%= form_with(url: "/web/login", method: :post, local: true, html: { class: "needs-validation", novalidate: true }) do |form| %>
        
        <!-- Flash messages -->
        <% if flash[:alert] %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= flash[:alert] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>

        <% if flash[:notice] %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= flash[:notice] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>

        <!-- Correo electrónico -->
        <div class="mb-3">
          <%= form.label :email_address, "Correo electrónico", class: "form-label" %>
          <%= form.text_field :email_address, required: true, class: "form-control", placeholder: "Ingresa tu correo electrónico" %>
        </div>

        <!-- Contraseña con ícono de ojo -->
        <div class="mb-3 position-relative">
          <%= form.label :password, "Contraseña", class: "form-label" %>
          <div class="input-group">
            <%= form.password_field :password, required: true, class: "form-control", placeholder: "Ingresa tu contraseña", id: "password_field" %>
            <span class="input-group-text" id="toggle-password">
              <i class="fas fa-eye" style="backgroud: #8e2de2" id="eye-icon"></i>
            </span>
          </div>
          <div class="invalid-feedback">
            La contraseña es obligatoria.
          </div>
        </div>

        <!-- Recordarme -->
        <div class="form-check mb-3">
          <%= form.check_box :remember_me, { class: "form-check-input" } %>
          <%= form.label :remember_me, "Recordarme", class: "form-check-label" %>
        </div>

        <!-- Botón de iniciar sesión -->
        <div class="d-grid">
          <%= form.submit "Iniciar sesión", class: "btn btn-primary" %>
        </div>
      <% end %>

      <!-- Enlaces para registro y contraseña, en una sola línea -->
      <div class="d-flex justify-content-between mt-3">
        <p class="mb-0">
          <%= link_to "¿No tienes una cuenta? Regístrate", "/web/signup", class: "text-decoration-none" %>
        </p>
        <p class="mb-0">
          <%= link_to "¿Olvidaste tu contraseña?", "#", class: "text-decoration-none" %>
        </p>
      </div>

      <!-- Opciones de inicio de sesión con terceros en una sola línea con botones pequeños y margen entre ellos -->
      <div class="text-center mt-4">
        <p>O inicia sesión con:</p>
        <div class="d-flex justify-content-center">
          <%= link_to "Google", "#", class: "btn btn-outline-primary ms-2" %>
          <%= link_to "Apple", "#", class: "btn btn-outline-primary ms-2" %>
          <%= link_to "Microsoft", "#", class: "btn btn-outline-primary ms-2" %>
        </div>
      </div>

      <!-- Enlace adicional para "No puedo iniciar sesión" -->
      <div class="d-flex justify-content-center mt-3">
        <%= link_to "No puedo iniciar sesión en mi cuenta", "#", class: "text-decoration-none" %>
      </div>

    </div>
  </div>
</div>

<!-- Script para mostrar/ocultar la contraseña -->
<script>
  document.getElementById("eye-icon").addEventListener("click", function() {
    var passwordField = document.getElementById("password_field");
    var icon = document.getElementById("eye-icon");

    // Cambiar tipo de campo de contraseña
    if (passwordField.type === "password") {
      passwordField.type = "text";
      icon.classList.remove("fa-eye");
      icon.classList.add("fa-eye-slash");
    } else {
      passwordField.type = "password";
      icon.classList.remove("fa-eye-slash");
      icon.classList.add("fa-eye");
    }
  });
</script>
