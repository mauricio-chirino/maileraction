<h1>Perfil del Usuario</h1>

<div class="card p-4">
  <div class="d-flex align-items-center">
    <div class="me-3">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, class: "rounded-circle", width: 100, height: 100 %>
      <% else %>
        <%= image_tag "default-avatar.png", class: "rounded-circle", width: 100, height: 100 %>
      <% end %>
    </div>

    <div>
      <h4><%= @user.name %></h4>
      <p class="mb-0 text-muted"><%= @user.email_address %></p>
      <p class="mb-0"><strong>Rol:</strong> <%= @user.role %></p>
    </div>
  </div>
</div>

<%= link_to "Editar Perfil", edit_web_user_path(@user), class: "btn btn-primary mt-3" %>
