<turbo-frame id="campaign_form">
  <%= form_with model: campaign, url: update_campaign_path(campaign), method: :patch, data: { turbo_frame: "campaign_form" } do |f| %>
    <div class="mb-3">
      <%= f.label :send_at, "Fecha de envÃ­o" %>
      <%= f.datetime_select :send_at, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :time_zone, "Zona horaria" %>
      <%= f.time_zone_select :time_zone, nil, class: "form-select" %>
    </div>

    <div class="d-flex justify-content-end">
      <%= f.submit "Actualizar", class: "btn btn-primary me-2" %>
      <button type="button" class="btn btn-outline-secondary" onclick="document.getElementById('campaign_form').innerHTML = ''">Cancelar</button>
    </div>
  <% end %>
</turbo-frame>
