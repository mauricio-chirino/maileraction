<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><i class="bx bx-calendar"></i> <%= t("campaign.schedule_title") %></h5>
    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#campaignPreviewModal">
      <i class="bx bx-show"></i> <%= t("campaign.preview_button") %>
    </button>
  </div>

  <div class="card-body">
    <form>
      <!-- Fecha de envío -->
      <div class="mb-3">
        <label class="form-label" for="campaign_schedule_at">
          <i class="bx bx-time-five me-1"></i> <%= t("campaign.schedule_date") %>
        </label>
        <input type="datetime-local" class="form-control" id="campaign_schedule_at" name="campaign[schedule_at]" />
      </div>

      <!-- Zona horaria -->
      <div class="mb-3">
        <label class="form-label" for="campaign_timezone">
          <i class="bx bx-globe me-1"></i> <%= t("campaign.timezone") %>
        </label>
        <select class="form-select" id="campaign_timezone" name="campaign[timezone]">
          <% ActiveSupport::TimeZone.all.sort_by(&:name).each do |tz| %>
            <option value="<%= tz.name %>"><%= tz.to_s %></option>
          <% end %>
        </select>
      </div>

      <!-- Botón para agendar campaña -->
      <div class="d-grid mt-4">
        <button type="submit" class="btn btn-primary">
          <i class="bx bx-calendar-check me-1"></i> <%= t("campaign.schedule_button") %>
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Modal de vista previa -->
<div class="modal fade" id="campaignPreviewModal" tabindex="-1" aria-labelledby="campaignPreviewModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="campaignPreviewModalLabel">
          <i class="bx bx-show-alt me-1"></i> <%= t("campaign.preview_title") %>
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="<%= t("campaign.close") %>"></button>
      </div>
      <div class="modal-body p-0">
        <iframe src="<%= web_dashboard_campaign_preview_path %>" width="100%" height="600" frameborder="0" style="border: none;"></iframe>
      </div>
    </div>
  </div>
</div>
