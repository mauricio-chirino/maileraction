<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0">Create New Campaign</h5>
    <small class="text-muted">Start a new email campaign using our builder or your saved templates.</small>
  </div>

  <div class="card-body">
    <%= form_with url: "#", method: :post, local: true, html: { class: "row g-3" } do %>
      <div class="col-md-6">
        <label class="form-label">Campaign Name</label>
        <input type="text" name="campaign[name]" class="form-control" placeholder="Spring Promo 2025" />
      </div>

      <div class="col-md-6">
        <label class="form-label">Select Industry Segment</label>
        <select name="campaign[industry_id]" class="form-select">
          <option disabled selected>Choose a segment</option>
          <option value="1">Retail</option>
          <option value="2">Logistics</option>
          <option value="3">Education</option>
          <!-- Este listado debería generarse dinámicamente desde el endpoint /api/v1/industries -->
        </select>
      </div>

      <div class="col-md-12">
        <label class="form-label">Email Subject</label>
        <input type="text" name="campaign[subject]" class="form-control" placeholder="Don't miss out on our offers!" />
      </div>

      <div class="col-md-12">
        <label class="form-label">Template or Editor</label>
        <div class="d-flex gap-3">
          <button type="button" class="btn btn-outline-secondary">Use Template</button>
          <!-- <button type="button" class="btn btn-outline-primary">Open Drag & Drop Editor</button>-->
          <%= link_to "Open Drag & Drop Editor",
            web_dashboard_dashboard_path(section: "campaign_create", editor: "visual", locale: I18n.locale),
            data: { turbo_frame: "dashboard_section" },
            class: "btn btn-outline-primary"
          %>
        </div>
        <small class="text-muted d-block mt-1">Choose a template or build your email with our visual editor.</small>
      </div>

      <div class="col-md-4">
        <label class="form-label">Send Limit (credits)</label>
        <input type="number" name="campaign[email_limit]" class="form-control" placeholder="e.g. 500" />
        <small class="text-muted">You have 1500 credits available</small>
      </div>

      <div class="col-md-4">
        <label class="form-label">Schedule</label>
        <input type="datetime-local" name="campaign[schedule_at]" class="form-control" />
      </div>

      <div class="col-md-4 d-flex align-items-end">
        <button type="submit" class="btn btn-success w-100">
          <i class="bx bx-send me-1"></i> Launch Campaign
        </button>
      </div>
    <% end %>
  </div>
</div>
