  <script src="https://demos.themeselection.com/sneat-bootstrap-html-admin-template/assets/vendor/js/helpers.js" defer></script>
  <script src="https://demos.themeselection.com/sneat-bootstrap-html-admin-template/assets/js/config.js" defer></script>
  <script src="https://demos.themeselection.com/sneat-bootstrap-html-admin-template/assets/vendor/js/menu.js" defer></script>

  <script src="https://demos.themeselection.com/sneat-bootstrap-html-admin-template/assets/js/main.js" defer></script>





  <!-- DataTables JS -->
  <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js" defer></script>
  <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js" defer></script>

  <!-- DataTables Responsive JS -->
  <script src="https://cdn.datatables.net/responsive/2.4.1/js/dataTables.responsive.min.js" defer></script>
  <script src="https://cdn.datatables.net/responsive/2.4.1/js/responsive.bootstrap5.min.js" defer></script>

  
<!-- Select2 JS -->
