  <link rel="stylesheet" href="https://cdn.datatables.net/select/1.6.2/css/select.bootstrap5.min.css" />





</head>

<body>



  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%= render "layouts/shared/sidebar" %>

      <div class="layout-page">
        <%= render "layouts/shared/admin_navbar" %>

        <div class="content-wrapper">
          <main class="container-xxl flex-grow-1 container-p-y">
            <%= yield %>
          </main>

          <!-- Footer -->
          <% unless request.path.start_with?("/web") %>
            <footer class="bg-light text-center text-muted py-4 mt-5">
                <%= render "shared/footer" %>
            </footer>
          <% end %>
          
        </div>
      </div>
    </div>

    <div class="layout-overlay layout-menu-toggle"></div>
  </div>

  <!-- Scripts de comportamiento -->
  <%= yield :javascript %>




