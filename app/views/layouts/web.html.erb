<!-- app/views/layouts/web.html.erb -->
<!DOCTYPE html>
<html lang="es" class="light-style layout-menu-fixed" data-theme="theme-default">
<head>
  <meta charset="utf-8" />
  <title><%= content_for?(:title) ? yield(:title) : "MailerAction Dashboard" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="<%= asset_path 'favicon.ico' %>" />

  <!-- TipografÃ­as -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@300;400;500;700&display=swap" rel="stylesheet" />

  <!-- Estilos de la app -->
  <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>

  <!-- Meta de seguridad -->
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Sneat CSS desde CDN -->
  <link rel="stylesheet" href="https://demos.themeselection.com/sneat-bootstrap-html-admin-template/assets/vendor/css/core.css">
  <link rel="stylesheet" href="https://demos.themeselection.com/sneat-bootstrap-html-admin-template/assets/vendor/css/theme-default.css">
  <link rel="stylesheet" href="https://demos.themeselection.com/sneat-bootstrap-html-admin-template/assets/css/demo.css">
  <link rel="stylesheet" href="https://demos.themeselection.com/sneat-bootstrap-html-admin-template/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/boxicons/2.1.0/css/boxicons.min.css" integrity="sha512-pVCM5+SN2+qwj36KonHToF2p1oIvoU3bsqxphdOIWMYmgr4ZqD3t5DjKvvetKhXGc/ZG5REYTT6ltKfExEei/Q==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%= render "layouts/shared/sidebar" %>

      <div class="layout-page">
        <%= render "layouts/shared/admin_navbar" %>

        <div class="content-wrapper">
          <main class="container-xxl flex-grow-1 container-p-y">
            <%= yield %>
          </main>

          <%= render "shared/footer" %>
        </div>
      </div>
    </div>

    <div class="layout-overlay layout-menu-toggle"></div>
  </div>

  <!-- Scripts de comportamiento -->
  <%= yield :javascript %>

  <!-- Stimulus y Turbo -->
  <%= javascript_importmap_tags %>

  <!-- Sneat Vendor JS desde CDN -->
  <script src="https://demos.themeselection.com/sneat-bootstrap-html-admin-template/assets/vendor/libs/jquery/jquery.js" defer></script>
  <script src="https://demos.themeselection.com/sneat-bootstrap-html-admin-template/assets/vendor/libs/popper/popper.js" defer></script>
  <script src="https://demos.themeselection.com/sneat-bootstrap-html-admin-template/assets/vendor/js/bootstrap.js" defer></script>
  <script src="https://demos.themeselection.com/sneat-bootstrap-html-admin-template/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js" defer></script>

  <!-- Sneat Core JS -->


  
  <script src="https://demos.themeselection.com/sneat-bootstrap-html-admin-template/assets/vendor/js/helpers.js" defer></script>
  <script src="https://demos.themeselection.com/sneat-bootstrap-html-admin-template/assets/js/config.js" defer></script>
  <script src="https://demos.themeselection.com/sneat-bootstrap-html-admin-template/assets/vendor/js/menu.js" defer></script>

  <script src="https://demos.themeselection.com/sneat-bootstrap-html-admin-template/assets/js/main.js" defer></script>

</body>
</html>
